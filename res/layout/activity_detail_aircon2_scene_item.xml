<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="horizontal">

    <RelativeLayout 
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="2dp"
       	android:background="@color/white" >
       	
    <LinearLayout
        android:id="@+id/ll_item_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal" >
        
		<TextView
		    android:id="@+id/tv_item_no"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="7dp"
		    android:layout_marginRight="7dp"
		    android:text="1"
		    android:textColor="@color/black"
		    android:textSize="@dimen/text_size_midnormal" />

    </LinearLayout>

	<LinearLayout
	    android:id="@+id/ll_item_mode"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:layout_toRightOf="@id/ll_item_no"
		android:orientation="vertical">
		
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:background="@color/white"
	        android:orientation="horizontal" >

       		<ImageView
       		    android:id="@+id/iv_item_power"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_marginLeft="@dimen/margin_scene"
       		    android:background="@drawable/item_poweron" />
       		
       		<ImageView
       		    android:id="@+id/iv_item_mode"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_marginLeft="@dimen/margin_scene"
       		    android:background="@drawable/item_mode_cool"
       		    android:visibility="gone" />

       		<ImageView
       		    android:id="@+id/iv_item_swing"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_marginLeft="@dimen/margin_scene"
       		    android:background="@drawable/item_swing_on"
       		    android:visibility="gone" />
       		
       		<ImageView
       		    android:id="@+id/iv_item_volume"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_marginLeft="@dimen/margin_scene"
       		    android:background="@drawable/item_volume_middle"
       		    android:visibility="gone" />
       		
       		<ImageView
       		    android:id="@+id/iv_item_temperature"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_margin="@dimen/margin_scene"
       		    android:background="@drawable/item_temp"
       		    android:visibility="gone" />
       		
       		<TextView
       		    android:id="@+id/tv_item_temperature"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_marginLeft="@dimen/margin_scene"
       		    android:text="16â„ƒ"
       		    android:textColor="@color/black"
       		    android:textSize="@dimen/text_size_midnormal" />
       		
       		<ImageView
       		    android:id="@+id/iv_item_delete"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_margin="@dimen/margin_scene"
       		    android:background="@drawable/item_temp" 
       		    android:visibility="gone"/>
       		       		
		</LinearLayout>
    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:background="@color/white"
	        android:orientation="horizontal" >
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_7"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_7_on" 
       		    android:visibility="gone"/>
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_1"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_1_on" 
       		    android:visibility="gone"/>
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_2"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_2_on" 
       		    android:visibility="gone"/>
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_3"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_3_on" 
       		    android:visibility="gone"/>
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_4"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_4_on" 
       		    android:visibility="gone"/>
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_5"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_5_on" 
       		    android:visibility="gone"/>
       		
       		<ImageView
       		    android:id="@+id/iv_item_week_6"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:background="@drawable/week_6_on" 
       		    android:visibility="gone"/>
       		
     		<TextView
     		    android:id="@+id/tv_timer_period"
     		    android:layout_width="150dp"
     		    android:layout_height="wrap_content"
     		    android:layout_alignParentTop="true"
     		    android:layout_gravity="center_vertical"
     		    android:layout_marginLeft="@dimen/margin_scene"
     		    android:focusable="false"
     		    android:singleLine="true"
     		    android:text="@null"
     		    android:textColor="@color/black"
     		    android:textIsSelectable="false"
     		    android:textSize="@dimen/text_size_samll" />
       		
       		<ImageView
       		    android:id="@+id/iv_item_alarm"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:background="@drawable/item_alarm" />
       		
       		<TextView
       		    android:id="@+id/tv_item_alarm"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:layout_marginLeft="@dimen/margin_scene"
       		    android:text="12:00"
       		    android:textColor="@color/black"
       		    android:textSize="@dimen/text_size_midnormal" />

		</LinearLayout>

    </LinearLayout>
    
	<LinearLayout
	    android:id="@+id/ll_item_enable"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerHorizontal="false"
	    android:layout_centerVertical="true"
	    android:layout_gravity="center_vertical"
	    android:background="@color/white"
	    android:orientation="horizontal" >

  		<ImageView
  		    android:id="@+id/iv_item_enable"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_gravity="center_vertical"
  		    android:background="@drawable/smp_switcher_open" />

	</LinearLayout>
</RelativeLayout>

</LinearLayout>