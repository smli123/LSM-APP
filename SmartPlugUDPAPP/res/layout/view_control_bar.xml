<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_controlcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">  
        
        <ImageView 
        	android:id="@+id/img_ctrl_lefticon"
        	android:layout_width="30dp"
        	android:layout_height="30dp" 
        	android:layout_alignParentLeft="true"
			android:scaleType="fitXY"
         	android:src="@drawable/smp_plug_big"
          	android:layout_marginTop="10dp" 
          	android:layout_centerVertical="true" 
          	android:layout_marginLeft="5dp"
          	android:visibility="gone"
            />
        
    	<TextView
        	android:id="@+id/text_ctrl_lefttext"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:text="@null"
        	android:textColor="@color/white"
        	android:textSize="@dimen/text_size_minimedium"
        	android:layout_centerInParent="true"
        	android:layout_toRightOf="@+id/img_ctrl_lefticon"
        	android:layout_marginLeft="5dp" />
    	
        <ImageView 
        	android:id="@+id/img_ctrl_righticon"
        	android:layout_width="30dp"
        	android:layout_height="30dp" 
			android:scaleType="fitXY"
            android:layout_marginTop="10dp" 
          	android:layout_centerVertical="true" 
          	android:layout_marginLeft="5dp"
          	android:layout_toLeftOf="@+id/text_ctrl_righttext"
          	android:visibility="gone"
          	/>
    	
    	<TextView
        	android:id="@+id/text_ctrl_righttext"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" 
        	android:text="@null"
        	android:textColor="@color/white"
        	android:textSize="@dimen/text_size_midsamll"
        	android:layout_centerInParent="true"
        	android:visibility="gone"
        	android:layout_marginRight="5dp"
        	android:layout_alignParentRight="true"/>  

    </RelativeLayout>
    
</RelativeLayout>
