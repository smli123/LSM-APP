    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"        
        android:background="@color/alertdialog_line"/>     

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="@string/str_wifi_pwd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_norsamll" />

        <EditText
            android:id="@+id/edit_wifi_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/register_pwd"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_norsamll" />

    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"        
        android:background="@color/alertdialog_line"/>       
        
    <LinearLayout
        android:id="@+id/layout_socket3_keeppwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"        
        android:layout_marginTop="10dp">        
  		<com.thingzdo.util.ThingzdoCheckBox 
	      	android:id="@+id/chkViewPwd" 
	      	android:layout_width="27dp"
	      	android:layout_height="27dp"/> 
		<TextView
	        android:id="@+id/login_keeppwd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"         
	        android:text="@string/str_passwd_visible"
	        android:textColor="@color/black"
	        android:layout_marginLeft="5dp"
	        android:layout_gravity="center"
	        android:textSize="@dimen/text_size_norsamll" />	        	 
    </LinearLayout>  
    
	<ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"        
        android:background="@color/alertdialog_line"/>    
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.thingzdo.util.ThingzdoCheckBox 
	      	android:id="@+id/chkClearTimer" 
	      	android:layout_width="27dp"
	      	android:layout_height="27dp"/>
        
		<TextView
	        android:id="@+id/txtClearTimer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"         
	        android:text="@string/str_cleartimer"
	        android:textColor="@color/black"
	        android:layout_marginLeft="5dp"
	        android:layout_gravity="center"
	        android:textSize="@dimen/text_size_norsamll" />        

    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"        
        android:background="@color/alertdialog_line"
        android:visibility="gone"/>     
        
    <LinearLayout
        android:id="@+id/layout_ProtocolMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"        
        android:layout_marginTop="10dp"
        android:visibility="gone">     
        
        <com.thingzdo.util.ThingzdoCheckBox 
	      	android:id="@+id/chkProtocolMode"
	      	android:layout_width="27dp"
	      	android:layout_height="27dp"/>
        
		<TextView
	        android:id="@+id/txtProtocolMode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/protocol_tcp"
	        android:textColor="@color/black"
	        android:layout_marginLeft="5dp"
	        android:layout_gravity="center"
	        android:textSize="@dimen/text_size_norsamll" />       
    </LinearLayout>   
		

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_selector"
        android:text="@string/add"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"        
        android:textSize="@dimen/text_size_larsamll" />

</LinearLayout>