<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    
    <LinearLayout
        android:id="@+id/ll_PowerCtrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        
        <LinearLayout	        
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center">

	       	<TextView
	       	    android:id="@+id/imgPowerCtrl"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:background="@null"
	       	    android:text="@string/power"
	       	    android:drawableTop="@drawable/smp_power_on_big"
	       	    android:gravity="center"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/text_size_midsamll"/>			               	
            
        </LinearLayout>
        
        <LinearLayout
        	android:id="@+id/ll_LightCtrl"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"  
	        android:orientation="vertical" 
	        android:gravity="center"
	        android:visibility="gone">

	       	<TextView
	       	    android:id="@+id/imgLightCtrl"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:background="@null"
	       	    android:gravity="center"
				android:drawableTop="@drawable/smp_light_on_big"	       	    
	       	    android:text="@string/nightlight"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/text_size_midsamll"/>			              	
            
        </LinearLayout>        
        
               
        <LinearLayout	        
        	android:id="@+id/ll_UsbCtrl"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:visibility="gone">

	       	<TextView
	       	    android:id="@+id/imgUsbCtrl"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:background="@null"
	       	    android:text="@string/usb"
	       	    android:drawableTop="@drawable/smp_usb_on_big"
	       	    android:gravity="center"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/text_size_midsamll"/>			               	
            
        </LinearLayout>        
        
        <!-- new add usb & bell -->
        <LinearLayout	        
        	android:id="@+id/ll_LockCtrl"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:visibility="gone">

	       	<TextView
	       	    android:id="@+id/imgLockCtrl"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:background="@null"
	       	    android:text="@string/smartplug_ctrl_lock"
	       	    android:gravity="center"
	       	    android:drawableTop="@drawable/smp_parentctrl_active_big"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/text_size_midsamll"/>			               	
            
        </LinearLayout>
        
        <LinearLayout	        
        	android:id="@+id/ll_PCCtrl"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center"
	        android:visibility="gone">

	       	<TextView
	       	    android:id="@+id/imgPCCtrl"
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:background="@null"
	       	    android:text="@string/smartplug_ctrl_openpc_cmd"
	       	    android:gravity="center"
	       	    android:drawableTop="@drawable/smp_openpcctrl_active_big"
	       	    android:textColor="@color/black"
	       	    android:textSize="@dimen/text_size_midsamll"/>			               	
            
        </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>    